<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMeditation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 감정 메시지 -->
    <TextView
        android:id="@+id/txtEmotionMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="감정 메시지"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 숨쉬기 애니메이션 뷰 (숨결 로고 대체) -->
    <ImageView
        android:id="@+id/imgBreathing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sun_logo"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/txtEmotionMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- 명상 타이머 -->
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgBreathing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 진행률 표시 -->
    <ProgressBar
        android:id="@+id/progressMeditation"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:progress="0"
        android:max="100"
        android:progressTint="#4CAF50"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/txtTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 시작 버튼 -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시작"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/progressMeditation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 일시정지 버튼 -->
    <Button
        android:id="@+id/btnPause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일시정지"
        android:textAllCaps="false"
        android:backgroundTint="#BBBBBB"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
